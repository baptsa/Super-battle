<div class="index-fight">
  <% @fights.reverse.each_with_index do |fight, i| %>
  <% id = fight.id %>
  <div class="row ">
    <div class="col-xs-12">
      <%= link_to fight_path(fight), target: "_blank" do %>
        <div class="box-fight">
          <div class="hidden" class= "fight-id"> <%= fight.id %> </div>
          <div class="h3 date-fight">
            <% d = Time.at(fight.created_at.to_i) %>
            <%= d.strftime("%d/%m - %H:%M") %>
          </div>

          <div class="border-winner-index1 fighter-box <%= fight.winner == fight.challenger ? "winner" : "" %>">
            <div>
              <%= image_tag fight.challenger.profile_picture, class: "avatar-medium-fights" %>
              <%= fight.challenger.username %>
            </div>
            <div class="text-right" id="scorePlayer<%= fight.id %>">
               <h1><%= fight.final_score_challenger %></h1>
            </div>
          </div>

          <div class= "border-winner-index2 fighter-box <%= fight.winner == fight.opponent ? "winner" : "" %>">
            <div class="text-right">
              <%= fight.opponent.username %>
              <%= image_tag fight.opponent.profile_picture, class: "avatar-medium-fights" %>
            </div>
            <div id="scorePlayer<%= fight.id + 1 %>">
              <h1><%= fight.final_score_opponent %></h1>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <% end %>
</div>



