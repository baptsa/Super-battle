<h1 class="text-center"> Welcome on superbattle </h1>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4">
        <div class="text-center" style="margin-top: 40px" >
          <form action="/users/sign_in" method="POST">
           <input name="username" type="text" placeholder="Challenger" >
          </form>
        </div>
    </div>
    <div class="col-xs-12 col-sm-4">
        <%= video_tag('battle3.mp4', class: "styled_video_container", autoplay: true, loop: true, size: "320x200") %>
    </div>
    <div class="col-xs-12 col-sm-4">
        <div class="text-center" style="margin-top: 40px" >
          <form action="/users/sign_in" method="POST">
          <input name="username" type="text" placeholder="Opponent" >
          </form>
        </div>
    </div>
  </div>
</div>

<div class="text-center">
  <%= link_to 'Start a fight', new_fight_path, class: "btn btn-primary" %>
</div>





<% @users.each do |user| %>
  <li> <%= user.username %> and <%= user.full_name %> <%= user.id %> </li>
<% end  %>

<h4>follower <%= @follows.counts.followed_by %></h4>
<h4>following <%= @follows.counts.follows %></h4>
<h4>posts <%= @follows.counts.media %></h4>

<% @recent_media.each do |media| %>
  <h4> like <%= media.likes["count"] %></h4>
  <h4> comment <%= media.comments["count"] %></h4>

<% end %>



